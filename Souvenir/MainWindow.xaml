<Window x:Class="Souvenir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Souvenir"
        mc:Ignorable="d"
        Title="Souvenir"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False" Topmost="True" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="{x:Null}"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <local:RingSpectrum x:Name="_ringSpectrum">
        </local:RingSpectrum>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Exit" Click="MenuItem_Click_Exit"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>
